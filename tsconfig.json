{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,                                
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@services/*": ["services/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
      "@middlewares/*": ["middlewares/*"],
      "@helpers/*": ["helpers/*"]
      },
    "allowJs": true,
    "resolveJsonModule": true, 
     "outDir": "./dist",                                  
    "esModuleInterop": true,                                                                                         
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true                                 
  },
  "include": [
    "src/**/*.ts"
  ]
}