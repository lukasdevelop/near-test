{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,                                
    "module": "commonjs",
    "baseUrl": "./src",
    "allowJs": true,
    "resolveJsonModule": true, 
     "outDir": "./dist",                                  
    "esModuleInterop": true,                                                                                         
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true                                 
  },
  "include": [
    "src/**/*.ts"
  ]
}